@model IEnumerable<OnlineArtGallery.Models.Artdetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!DOCTYPE html>
    <html>

    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
              integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

        <link href="D:/style" rel="stylesheet" />
    </head>
    <body>


        <div style="overflow-x:scroll">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th>
                            ART-Name
                        </th>
                        <th>
                            Artist
                        </th>
                        <th>
                            Descrption
                        </th>
                        <th>
                            Size
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Avaliablity
                        </th>
                        <th>
                            Review
                        </th>
                        <th>
                            Img
                        </th>

                        <th>
                            Email-U
                        </th>
                        <th>
                            Status
                        </th>
                        <th scope="col">Modification</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nameart)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.nameartist)
                            </td>
                            <td style="max-width:100px; overflow-x:scroll" class="hover-scroll-overlay-x h-400px px-5">
                                @Html.DisplayFor(modelItem => item.descriptionofart)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.artsize)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.avali)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.review)
                            </td>
                            <td>
                                <img src="@Url.Content(item.img)" alt="" width="200" height="200" />
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.hidemail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.appstatus)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                            </td>
                        </tr>
                    }

            </table>
        </div>
    </body>
</html>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
}
