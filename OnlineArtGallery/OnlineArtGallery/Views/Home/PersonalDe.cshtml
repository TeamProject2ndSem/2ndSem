<!-- ======= Portfolio Details Section ======= -->
<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous" />
<section id="portfolio-details" class="portfolio-details">

    <section class="section about-section gray-bg" id="about">
        <div class="container">
            <div class="row align-items-center flex-row-reverse">
                <div class="col-lg-6">
                    <div class="counter">
                        <div class="row">
                            <div class="col-6 col-lg-6">
                                <div class="count-data text-center">
                                    <h6 class="count h2" data-to="500" data-speed="500">500</h6>
                                    <p class="m-0px font-w-600">Reviews</p>
                                </div>
                            </div>
                            <div class="col-6 col-lg-">
                                <div class="count-data text-center">
                                    <h6 class="count h2" data-to="850" data-speed="850">850</h6>
                                    <p class="m-0px font-w-600">Recent-Orders</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about-text go-to">
                        <h3 class="dark-color">Personal Details</h3>
                        <h6 class="theme-color lead">
                            @*Full Name Diplay*@
                                @Html.DisplayFor(model => model.fname,new { @class= "theme-color lead" })
                            @Html.DisplayFor(model => model.lname, new { @class = "theme-color lead" })
                        </h6>
                        <!-- <p>I <mark>design and develop</mark> services for customers of all sizes, specializing in creating stylish, modern websites, web services and online stores. My passion is to design digital user experiences through the bold interface and meaningful interactions.</p> -->
                        <div class="row about-list">
                            <div class="col-md-6">
                                <div class="media">
                                    @*E-mail*@
                                    <label><b>E-mail</b></label>
                                    <p> @Html.DisplayFor(model => model.email)</p>
                                </div>
                                <div class="media">
                                    @*Phone-1*@
                                    <label><b>Phone</b></label>
                                    <p>
                                        @Html.DisplayFor(model => model.contacto)
                                    </p>
                                </div>
                                <div class="media">
                                    @*Phone-2*@
                                    <label><b>Phone-2</b></label>
                                    <p>
                                        @Html.DisplayFor(model => model.contactt)
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="media">
                                   
                                    <label><b>Residence</b> </label>
                                    <p>
                                        @Html.DisplayFor(model => model.city)
                                        @Html.DisplayFor(model => model.region)
                                        <b>@Html.DisplayFor(model => model.country)</b>
                                    </p>
                                </div>
                                <div class="media">
                                    @*Address Display*@
                                    <label><b>Address</b></label>
                                    <p>
                                        @Html.DisplayFor(model => model.adress) 
                                    </p>
                                </div>
                                <div class="media">
                                    <label><b>Postal Code</b></label>
                                    <p>
                                        @Html.DisplayFor(model => model.pcode)
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- reverse -->
            </div>
        </div>
    </section>
    <section class="row">
        <div class="container">
            <div class="col-12"
            <p class="text-uppercase">IF YOU HAVN'T GOT YOUR MEMBERSHIP APPLY NOW  <button type="button" class="btn btn-primary">Memership</button></p>

            </div>
            <div class="col-12">
                <p>APPLY TO DISPLAY YOUR PERSONAL ART <button >@Html.ActionLink("APPLY TO SALE","Editimage","inibuyers",null,new { @type = "button" ,@class="btn btn-primary" })</button></p>
            </div>
            </div>
</section>
</section>

<!--End Portfolio Details Section -->
