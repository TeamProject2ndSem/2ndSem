@model OnlineArtGallery.Models.UserAuthClass

@{
    /**/

    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!DOCTYPE html>
    <html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    </head>
    <body>

        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">

                                <!-- Pills navs -->
                                <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <a 
                                         
                                           data-mdb-toggle="pill"
                                           
                                           role="tab"
                                           aria-controls="pills-login"
                                           aria-selected="true">@Html.ActionLink("Login", "Login", "AccountsManagement",new { @class = "nav-link active",@id = "tab-login" , @href = "#pills-login" }) </a>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link"
                                           id="tab-register"
                                           data-mdb-toggle="pill"
                                           href="#pills-register"
                                           role="tab"
                                           aria-controls="pills-register"
                                           aria-selected="false">@Html.ActionLink("Sign Up", "signup", "AccountsManagement")</a>
                                    </li>
                                </ul>
                                <!-- Pills navs -->
                                <!-- Pills content -->
                                <div class="tab-content">
                                    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                                        <form>
                                            <!-- Email input -->
                                            <div class="form-outline mb-4">
                                                <label class="form-label" for="loginName">Email </label>
                                                    @Html.TextBoxFor(m => m.email, new { @id = "loginName", @class = "form-control" })
                                                </div>

                                                <!-- Password input -->
                                                <div class="form-outline mb-4">
                                                    <label class="form-label" for="loginPassword">Password</label>
                                                    @Html.PasswordFor(m => m.pass, new { @type = "password", @id = "loginPassword", @class = "form-control" })
                                                </div>

                                                <!-- Submit button -->
                                                <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

                                                <!-- Register buttons -->
                                                <div class="text-center">
                                                    <p>Not a member? @Html.ActionLink("Sign Up","signup", "AccountsManagement")</p>
                                                </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Pills content -->
                    </div>
                </div></div>
            </div>

                <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
                <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
                <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
                
</body>
</html>


                }
